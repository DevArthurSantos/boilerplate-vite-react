{
  "compilerOptions": {
    "target": "ESNext",
    "types": [
      "node",
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@public/*": ["./public/*"],
      "@pages/*": ["./src/pages/*"],
      "@infra/*": ["./src/infra/*"],
      "@types/*": ["src/infra/types/*"],
      "@utils/*": ["./src/infra/utils/*"],
      "@foundation/*": ["./src/foundation/*"],
    },
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}